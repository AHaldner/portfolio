---
interface Props {
  platform: string;
  username: string;
}

const { platform, username } = Astro.props;
---

<a href={`https://${platform}/${username}`}>{platform}</a>

<style lang="scss">
  a {
    text-decoration: none;
    color: var(--accent-color);
    transition: ease-in-out 0.2s;

    &:hover {
      opacity: 0.6;
    }
  }
</style>
